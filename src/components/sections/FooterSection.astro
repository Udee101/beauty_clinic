---
import { Image } from "astro:assets";
import LogoImg from "../../assets/Logo.svg";
import { navLinks } from "../../data/navLinks";
import SectionTitle from "../SectionTitle.astro";
---

<footer class="w-full border-t relative border-t-primary-grey-200">
	<div
		class="absolute inset-16 rounded-full bg-blur-yellow blur-[10rem] right-[5rem] top-0 md:right-[50%] overflow-hidden"
	>
	</div>
	<div
		class="absolute inset-10 rounded-full bg-blur-yellow blur-[5rem] left-[5rem] bottom-10 md:left-[80%] overflow-hidden"
	>
	</div>
	<div class="max-w-custom mx-auto pt-20 pb-10 px-4 relative z-[1]">
		<div
			class="pb-4 grid items-center gap-8 md:grid-cols-2 md:border-b md:border-b-primary-grey-200"
		>
			<div class="space-y-4">
				<Image src={LogoImg} alt="logo image" />
				<p class="max-w-[12rem] text-sm font-light">
					Clary 5, Ste 97, San Francisco, CA, 12345
				</p>
			</div>

			<div class="flex flex-col gap-4 md:flex-row md:justify-between">
				{
					navLinks.map((el) => (
						<div>
							<a
								href={el.url}
								class="text-sm text-secondary-grey md:text-base hover:text-black duration-300"
							>
								{el.link_name}
							</a>
						</div>
					))
				}
			</div>
		</div>

		<div class="pt-4 grid items-center gap-8 md:grid-cols-2">
			<div>
				<SectionTitle title="OPENING HOURS" extraClass="text-sm font-light" />
				<p class="text-sm font-light mt-3">Monday - Saturday : 10 AM - 07 PM</p>
			</div>

			<div
				class="flex flex-col gap-y-4 md:space-x-16 md:flex-row md:justify-self-end"
			>
				<div>
					<a
						href="#"
						class="text-sm text-secondary-grey md:text-base hover:text-black duration-300"
					>
						Terms & Conditions
					</a>
				</div>

				<div>
					<a
						href="#"
						class="text-sm text-secondary-grey md:text-base hover:text-black duration-300"
					>
						Privacy Policy
					</a>
				</div>
			</div>
		</div>
	</div>
	<center class="relative z-[1] p-4 w-full bg-primary-brown">
		<p class="text-white text-sm">CREATED BY FRANK UDEORAH</p>
	</center>
</footer>
