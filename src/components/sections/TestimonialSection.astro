---
import { Image } from "astro:assets";
import lines from "../../assets/lines.svg";
---

<section id="testimonial" class="py-20 px-4 w-full bg-primary-yellow relative">
	<div
		class="absolute inset-0 flex w-full items-center justify-center overflow-hidden"
	>
		<Image src={lines} alt="" />
	</div>
	<div class="max-w-custom mx-auto">
		<center class="relative z-[1]">
			<div class="max-w-lg space-y-8">
				<p class="text-2xl font-Judson">
					“I am very happy with this beauty clinic. They really pamper their
					customers and give everything with the best”
				</p>
        <p class="font-light">REINA DOE <br><span class="text-sm">Artist / Singer</span></p>
			</div>
		</center>
	</div>
</section>
